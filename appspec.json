{
    "version": 0.0,
    "Resources": [
        {
            "TargetService": {
                "Type": "AWS::ECS::Service",
                "Properties": {
                    "TaskDefinition": "<TASK_DEFINITION>",
                    "LoadBalancerInfo": {
                        "ContainerName": "todo-container",
                        "ContainerPort": 3000
                    },
                    "Environment": [
                        {
                            "Name": "DYNAMODB_TABLE",
                            "Value": "db_todo_app"
                        },
                        {
                            "Name": "AWS_REGION",
                            "Value": {
                                "Ref": "eu-west-1"
                            }
                        },
                        {
                            "Name": "PORT",
                            "Value": "3000"
                        }
                    ]
                }
            }
        }
    ]
}