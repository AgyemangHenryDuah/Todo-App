{
    "family": "",
    "networkMode": "awsvpc",
    "executionRoleArn": "",
    "containerDefinitions": [
        {
            "name": "todo-container",
            "image": "public.ecr.aws/b8c4r0w8/todo_repo:henryagyemang_todo_app",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/todo-app",
                    "awslogs-region": "eu-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024"
}